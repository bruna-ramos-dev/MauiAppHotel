<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="Hospedagem Contratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Padding="10"
                         Spacing="15">

        <!-- Nome da suíte -->
        <Label x:Name="lblQuarto"
               TextColor="{StaticResource Primary}"
               FontFamily="Kalam"
               FontSize="40"
               HorizontalTextAlignment="Center"
               Text="Suíte selecionada" />

        <!-- Quantidade de adultos e crianças -->
        <Frame Margin="10">
            <StackLayout Orientation="Horizontal" Spacing="30">

                <HorizontalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center">
                    <Label Text="Adultos: " />
                    <Label x:Name="lblAdultos"
                           TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center">
                    <Label Text="Crianças: " />
                    <Label x:Name="lblCriancas"
                           TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>

            </StackLayout>
        </Frame>

        <!-- Período da estadia -->
        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" />
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" />
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia (dias):" />

                <Label x:Name="lblCheckin"
                       Grid.Row="1" Grid.Column="0"
                       TextColor="{StaticResource Primary}" />
                <Label x:Name="lblCheckout"
                       Grid.Row="1" Grid.Column="1"
                       TextColor="{StaticResource Primary}" />
                <Label x:Name="lblEstadia"
                       Grid.Row="1" Grid.Column="2"
                       TextColor="{StaticResource Primary}" />
            </Grid>
        </Frame>

        <!-- Valor total -->
        <Frame Margin="10">
            <HorizontalStackLayout HorizontalOptions="Center"
                                   VerticalOptions="Center">
                <Label Text="Valor Total: " />
                <Label x:Name="lblValorTotal"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold" />
            </HorizontalStackLayout>
        </Frame>

        <!-- Botão de voltar -->
        <Button Text="Voltar"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="10"
                Padding="10,5"
                WidthRequest="200" />

    </VerticalStackLayout>
</ContentPage>
